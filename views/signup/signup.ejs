<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Sign Up | UF ACM</title>
    <link rel="icon " type="image/x-icon" href="img/icon.png" />
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="../css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:100,100italic' rel='stylesheet' type='text/css'>
    <!-- Script for nav -->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="../js/bin/materialize.js"></script>
    <script>
        $(document).ready(function() {
            $('.parallax').parallax();
            $('select').material_select();
            $(".button-collapse").sideNav();
            $(".dropdown-button").dropdown();


            document.getElementById("buts").onclick = function() {
                document.getElementById("sub").submit();
            }

        });
    </script>
</head>

<!-- navbar include directive  -->
<% include ../navBar %>

    <body>
        <div style="height:30%;  background-image: url('../img/ufpt.jpg'); position:relative; top:-75px; z-index:-1;">
            <h1 class="header white-text">Sign Up</h1>
        </div>
        <main>
            <div class="container">

              <h4 style="color: red"><%= message %></h4>

                <form action="/signup" method="post" id="sub">

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="firstName" type="text" class="validate" name="firstName" required>
                            <label for="firstName">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="lastName" type="text" class="validate" name="lastName" required>
                            <label for="lastName">Last Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate" name="email" required>
                            <label for="email" data-error="Please Enter Valid Email">Email</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="phoneNumber" type="text" class="validate" name="phoneNumber" required>
                            <label for="phoneNumber" data-error="Please Enter a Valid Phone number">Phone Number</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            <p class="text-center">Would you like to be put on the ACM list serve?</p>
                            <p>
                                <input class="with-gap" name="listServe" type="radio" id="LSYes" value="true" required/>
                                <label for="LSYes">Yes</label>
                            </p>
                            <p>
                                <input class="with-gap" name="listServe" type="radio" id="LSNo" value="false" required/>
                                <label for="LSNo">No</label>
                            </p>
                            <p>
                                <input class="with-gap" name="listServe" type="radio" id="LSAlreadyOnIt" value="true" required/>
                                <label for="LSAlreadyOnIt">Already on it!</label>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate" name="password" required>
                            <label for="password">Password</label>
                        </div>
                    </div>

                    <a class="waves-effect waves-light btn teal lighten-1" id="buts" type="submit"><i class="material-icons left">lock_open</i>Sign Up</a>

                </form>

            </div>



        </main>

        <!--  Scripts-->
        <script src="../js/bin/materialize.js"></script>
    </body>

</html>
